
public abstract class Personnage
{
	private String nom,caractéristiques;
	private int rang;
	private Joueur joueur;
	private boolean assassiné,volé;
	private PlateauDeJeu plateau;
	public PlateauDeJeu getPlateau()
	{
		return plateau;
	}
	public void setPlateau(PlateauDeJeu nouveau)
	{
		plateau=nouveau;
	}
	public Personnage(String nom,String caractéristiques, int rang )
	{
		joueur=null;
		assassiné=false;
		volé=false;
	}
	public String getNom()
	{
		return nom;
	}
	public String getCaractéristiques()
	{
		return caractéristiques;
	}
	public int getrang()
	{
		return rang;
	}
	public Joueur getJoueur()
	{
		return joueur;
	}
	public void setJoueur(Joueur j)
	{
		joueur=j;
	}
	public boolean getVole()
	{
		return volé;
	}
	public void setVole()
	{
		volé=true;
	}
	public boolean getAssassine()
	{
		return assassiné;
	}
	public void setAssassine()
	{
		assassiné=true;
	}
	public void ajouterPieces()
	{
		if((joueur==null)||(assassiné))
		{
			return;
		}
		else
			joueur.ajouterPiece(2);
	}
	public void ajouterQuartier(Quartier nouveau)
	{
		if((joueur==null)||(assassiné))
		{
			return;
		}
		else
			joueur.ajouterQuartierDansMain(nouveau);
	}
	public void construire(Quartier nouveau)
	{
		if((joueur==null)||(assassiné))
		{
			return;
		}
		else
			joueur.ajouterQuartierDansCite(nouveau);
	}
	public void percevoirRessourcesSpecifiques()
	{
		if((joueur==null)||(assassiné))
		{
			return;
		}
		else
			System.out.println("Aucune ressource spécifique ");
	}
	abstract void utiliserPouvoir();
	public void reinitialiser() 
	{
		joueur=null;
		assassiné=false;
		volé=false;
	}
}

